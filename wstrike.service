[Unit]
Description=window strike monitoring service
Wants=sound.target
After=sound.target
StartLimitIntervalSec=120
StartLimitBurst=12
StartFailureAction=/usr/sbin/reboot

[Service]
Type=simple
User=wstrike
ExecStart=/usr/local/bin/wstrike
WorkingDirectory=/var/local/wstrike
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
